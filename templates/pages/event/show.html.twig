{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <div class="container mx-auto">
        <div class="border rounded my-5">
            <div class="w-full h-64 rounded-b"
                 style="background-image: url('https://picsum.photos/1500/300'); background-repeat: no-repeat; background-size: cover; background-position: center">

            </div>

            <h1 class="text-3xl">{{ event.name }}</h1>
            <p class="text-gray-500">{{ event.description }}</p>
        </div>
    </div>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ event.id }}</td>
        </tr>
        <tr>
            <th>Nom de l'événement</th>
            <td>{{ event.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ event.description }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Nombre maximum de participants</th>
            <td>{{ event.maxParticipants }}</td>
        </tr>
        <tr>
            <th>Public</th>
            <td>{{ event.public ? 'Oui' : 'Non' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_event_index') }}">back to list</a>

    <a href="{{ path('app_event_edit', {'id': event.id}) }}">edit</a>

    {{ include('pages/event/_delete_form.html.twig') }}
{% endblock %}
